<%= form_for @blog do |f| %>
 
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@blog.errors.count, "error") %> prohibited
        this blog from being saved:
      </h2>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description%>
  </p>
 <p>
    <%= f.label :image %><br>
    <%= f.file_field :image, :multiple=>true%>
  </p>
  <p>
    <%= f.label :video %><br>
    <%= f.file_field :video%>
  </p>
  <p>
    <%= f.select(:category_id, Category.all.collect {|u| [u.name, u.id]}, :prompt => 'Select Category') %>
    
  </p>
  <p>
    <%= f.submit %>
  </p>
 
<% end %>